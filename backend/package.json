{
  "name": "demo-backend",
  "version": "1.0.1",
  "description": "Express backend for SPA demo (file DB, JWT, admin, items)",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "start": "cross-env NODE_ENV=production node src/index.js",
    "pm2:start": "pm2 start src/index.js --name api-backend",
    "pm2:restart": "pm2 restart api-backend || npm run pm2:start",
    "pm2:stop": "pm2 stop api-backend || true",
    "pm2:delete": "pm2 delete api-backend || true",
    "pm2:logs": "pm2 logs api-backend",
    "pm2:save": "pm2 save",
    "pm2:enable-boot": "pm2 startup systemd -u ec2-user --hp /home/ec2-user && pm2 save"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.0"
  }
}
